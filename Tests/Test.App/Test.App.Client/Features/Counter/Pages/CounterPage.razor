@rendermode InteractiveAuto
@namespace Test.App.Client.Pages
@page "/counter"
@inherits BaseComponent

<h1>Counter Page</h1>

<h2>Counter Display 1</h2>
<Counter TestId="Counter1" />
<br />

<h2>Counter Display 2</h2>
<Counter TestId="Counter2" />
<br />
<hr />
<h6>Reset button will clear all state in the Store and return you to the home page</h6>
<ResetButton />

<br />
<hr />
<h6>Click below to send a Change Route Request that should take back to home page.</h6>
<button class="btn btn-primary" data-qa="ChangeRoute" @onclick=ChangeRouteToHome>Change Route to Home</button>

<br />
<hr />
<h6>Click below to send a IncrementCountAction via JsInterop.</h6>
<button class="btn btn-primary" data-qa="JsInterop" onclick="window.InteropTest()">Increment Count by 7 via JavaScript Interop</button>

<br />
<hr />
<h6>Click below to Throw Test.App.Client Side.</h6>
<button class="btn btn-primary" data-qa="ThrowException" @onclick=SendThrowExceptionAction>Send Throw Exception Action</button>

<h6>Click below to Throw Test.App.Server Side.</h6>
<button class="btn btn-primary" data-qa="ThrowException" @onclick=SendThrowServerSideExceptionAction>Send Throw Exception Action</button>

<button class="btn btn-primary" data-qa="GoBack" @onclick=GoBack>Go Back</button>

<br />
<hr />
<h6>EventStream is an example of middleware.  It adds each action to list.</h6>
<EventStream />
